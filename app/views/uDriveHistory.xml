<Alloy>
	<!-- Android -->
		<Tab id="DH" title="History" platform="android">
		<Window id="win" platform="android" onOpen="load" onAndroid:back="closeWindow">
			<Label id="loadmore" onClick="LoadMore" platform="android">Load More</Label>
			<TableView id="tableview" platform="android" onScrollend="hide"></TableView>
		</Window>
	</Tab>
		<!-- IOS -->
	<Tab id="DH" title="HISTORY" platform="ios" icon="/images/ride_history.png">
		<Window id="win" platform="ios" onOpen="load" title="uDrive" fullscreen="false" statusBarStyle="Ti.UI.iPhone.StatusBar.TRANSLUCENT_BLACK">
			<LeftNavButton>
				 <ImageView  class="commonBack" onClick="closeWindow" platform="ios"></ImageView>
			</LeftNavButton>
			<Label id="loadmore" onClick="LoadMore" platform="ios">Load More</Label>
			<TableView id="tableview" platform="ios" onScrollend="hide"></TableView>
		</Window>
	</Tab>
</Alloy>