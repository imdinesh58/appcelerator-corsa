		<LeftNavButton>
			 <ImageView  class="commonBack" onClick="WindowClose" platform="ios"></ImageView>
		</LeftNavButton>
		<!-- <ImageView id="add" platform="ios" onSingletap="AddPay" ></ImageView> -->
		<RightNavButton>
			<ImageView id="add" onClick="AddPay" platform="ios"></ImageView>
		</RightNavButton>
		<Label id="help" onClick="help"></Label>
		<TableView id="tableview" platform="ios" searchAsChild="false"></TableView>			
		<Label id="nodata" platform="ios">No Credit Card details found</Label>
	</Window>
	</NavigationWindow>
</Alloy>
