		<Label id="lblCreditCard" onClick="getcreditCard">Add Credit Card</Label>
		<ImageView id="getdebitCard" onClick="getdebitCard"></ImageView>
		<Label id="lblDebitCard" onClick="getdebitCard">Add Bank</Label>
		<ImageView id="getSecurity" onClick="getSecurity"></ImageView>
		<Label id="lblSecurity" onClick="getSecurity">Change Password</Label>
		<ImageView id="getUser" onClick="getUser"></ImageView>
		<Label id="lblUser" onClick="getUser">Add Address</Label>
