				<ImageView class="commonBack" platform="ios" onClick="Close"></ImageView>
			</LeftNavButtons>
			<ImageView id="getcreditCard" onClick="getcreditCard"></ImageView>
			<Label id="lblCreditCard" onClick="getcreditCard">Add Credit Card</Label>
			<ImageView id="getdebitCard" onClick="getdebitCard"></ImageView>
			<Label id="lblDebitCard" onClick="getdebitCard">Add Bank</Label>	
