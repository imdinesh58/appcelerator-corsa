	</TabGroup>
	<!--ios -->
	<TabGroup id="uCarpoolTabGroupId" onOpen="load" platform="ios" title="" tabsBackgroundColor="#000023"  barColor="#000023">
		<Require id="uCarpoolORqstsTabId" src="uCarpoolOutstandingRqsts"  platform="ios"/>
		<Require id="uCarpoolNewRqstTabId" src="uCarpoolNewRqst"  platform="ios"/>
		<Require id="uCarpoolHistoryTabId" src="uCarpoolHistory" platform="ios"/>
	</TabGroup>
