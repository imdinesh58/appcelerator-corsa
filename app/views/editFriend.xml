		 </LeftNavButton>
		 <ImageView id="IMG" platform="ios"></ImageView>
		 <ImageView id="img2" platform="ios"></ImageView>
		 <ImageView id="img3" platform="ios"></ImageView>
		 <Label id="photo" platform="ios"></Label>
		 <Label id="name" platform="ios"></Label>
		 <Label id="phone" platform="ios" class="customLabel"></Label>
		 <Label id="email" platform="ios" class="customLabel"></Label>
	</Window>
